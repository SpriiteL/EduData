{% extends 'base.html.twig' %}

{% block title %}Badge{% endblock %}

{% block body %}
    <h1>Badge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ badge.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ badge.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ badge.Prenom }}</td>
            </tr>
            <tr>
                <th>Date</th>

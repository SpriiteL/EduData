            </tr>
            <tr>
                <th>Classe</th>
                <td>{{ badge.Classe }}</td>
            </tr>
            <tr>
                <th>EtatTraitement</th>
                <td>{{ badge.etatTraitement }}</td>
            </tr>
        </tbody>
    </table>

